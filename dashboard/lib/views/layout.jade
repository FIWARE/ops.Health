  body

  div.boxheader
     .header
         div.logo
         .login
            if name=='sign in' || name==undefined
               div.fiware_icon
                 img(src='#{web_context}images/fiware_ico.png' )
               div.header_buttons
                   button.btn(onclick="window.location.href='#{web_context}signin'") Sign In
                   button.btn(onclick="window.location.href='#{web_context}'") Home

            else
                div(style="float:left")
                    ul
                        li
                          img(src='#{web_context}images/user.png' )
                        li
                          span.user #{name} &nbsp;
                div.header_buttons
                    button.btn(onclick="logout('#{web_context}logout')") Log out
                    button.btn(onclick="window.location.href='/'") Home


         .header-content#header-content
                p



  body

  div.boxheader
     .header
         div.logo
         .login
            if name=='sign in' || name==undefined
               div.fiware_icon
                 img(src='#{webContext}images/fiware_ico.png' )
               div.header_buttons
                   button.btn(onclick="window.location.href='#{webContext}signin'") Sign In
                   button.btn(onclick="window.location.href='#{webContext}'") Home

            else
                div(style="float:left")
                    ul
                        li
                          img(src='#{webContext}images/user.png' )
                        li
                          span.user #{name} &nbsp;
                div.header_buttons
                    button.btn(onclick="logout('#{webContext}logout','#{logoutUrl}')") Log out
                    button.btn(onclick="window.location.href='/'") Home


         .header-content#header-content
                p



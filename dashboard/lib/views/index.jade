extends layout

block content
  .header
    .header-content
      p FIWARE REGIONS - SANITY CHECK - #{timestamp}



  block container
      .box1
        ul.region-list
           each region in regions
              - color = region['status'] == 'OK' ?'green' : region['status'] == 'NOK'?'red':'yellow';
              - filename= region['node'] + "_results.html";
              if region['status']!='N/A'
                li: a(class='#{color}', href='#{filename}', title="#{region['node']") #{region['node']}
                    button.btn(data-action="btn-subscribe") Subscribe
              else
                li(class='#{color}') #{region['node']}
                  button.btn(data-action="btn-subscribe") Subscribe





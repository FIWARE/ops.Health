extends layout

block content

  block container
      div.box0
          .header
              .header-content
                p SANITY CHECK STATUS | #{timestamp}

          div
              div.box1
                ul.region_list
                   each region in regions
                      - color = region['status'] == 'OK' ?'green' : region['status'] == 'NOK'?'red':'yellow';
                      - filename= region['node'] + "_results.html";
                      if region['status']!='N/A'
                        li.red_and_green
                             a(class='#{color}', href='/report/#{filename}', title="#{region['node']}") #{region['node']}
                             button.btn(onclick="window.open('/refresh?region=#{region['node']}','_self');") Refresh
                             button.btn(data-action="btn-subscribe" disabled) Subscribe
                      else
                        li.yellow
                             | #{region['node']}
                             button.btn(onclick='refresh()') Refresh
                             button.btn(data-action="btn-subscribe" disabled) Subscribe


extends layout

block content

  block container

            div#frameContainer(style="height:100%")
            div.box1#box1

             #box2.box2
                p
                ul.region_list
                   each region in regions
                      - var filename = region['node'] + '_results.html';
                      - var sanity_status = region['status'];
                      case sanity_status
                        when 'OK'
                            - var color = 'sanity_ok';
                        when 'NOK'
                            - var color = 'sanity_nok';
                        when 'POK'
                            - var color = 'sanity_pok';
                        default
                            - var color = 'sanity_na';

                      if sanity_status!='N/A'
                        li.sanity_nok_and_sanity_ok
                             a( class='#{color}', href='javascript:loadReport("#{filename}")') #{region['node']}
                             div.timestamp
                                  |(last updated: #{region['timestamp']})


                      else
                        li.sanity_na
                             div(style="height:0px",title='Sanity Check in progress') #{region['node']}
                             div.timestamp
                               |(in progress)

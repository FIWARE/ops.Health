extends layout

block content

  block container

            div#frameContainer(style="height:100%")
            div.box1#box1

             #box2.box2
                ul.region_list
                   each region in regions
                      - var filename = web_context+'report/'+region['node'] + '_results.html';
                      - var sanity_status = region['status'];
                      case sanity_status
                        when ''
                           li.sanity_no_data
                            div(style="height:0px",title='no data #{sanity_status}') #{region['node']}
                        when 'OK'
                            li.sanity_ok
                             a( class='sanity_ok', href='javascript:loadReport("#{filename}")') #{region['node']}
                             div.timestamp
                                  |(last updated: #{region['timestamp']})
                        when 'NOK'
                            li.sanity_nok
                                a( class='sanity_nok', href='javascript:loadReport("#{filename}")') #{region['node']}
                                div.timestamp
                                    | (last updated: #{region['timestamp']})
                        when 'POK'
                            li.sanity_pok
                                a( class='sanity_pok', href='javascript:loadReport("#{filename}")') #{region['node']}
                                div.timestamp
                                    | (last updated: #{region['timestamp']})
                        default
                             li.sanity_na
                                 div(style="height:0px",title='Sanity Check in progress') #{region['node']}
                                 div.timestamp
                                    |(in progress)

extends layout

block content

  block container
      div.box0
          .header
              .header-content
                p SANITY CHECK STATUS | #{timestamp}


          div.box1


             #box2.box2
                button.btn(onclick="window.location.href='/signin'") Sign In with FIWARE Account
                p &nbsp;
                ul.region_list
                   each region in regions
                      - color = region['status'] == 'OK' ?'green' : region['status'] == 'NOK'?'red':'yellow';
                      - filename= region['node'] + "_results.html";
                      if region['status']!='N/A'
                        li.red_and_green
                             a( class='#{color}', href='/report/#{filename}') #{region['node']}
                      else
                        li.yellow
                             | #{region['node']}


extends layout

block content

  block container
      div.box0
          .header
              .header-content
                p SANITY CHECK STATUS | OVERVIEW


          div.box1

             #box2.box2
                ul.region_list
                   each region in regions
                      - color = region['status'] == 'OK' ?'green' : region['status'] == 'NOK'?'red':'yellow';
                      - filename= region['node'] + "_results.html";
                      if region['status']!='N/A'
                        li.red_and_green
                             a( class='#{color}', href='/report/#{filename}') #{region['node']}
                             button.btn(onclick="javascript:refresh(this,'#{region['node']}')") Refresh
                             button.btn(disabled style="display: none") Subscribe
                             div.timestamp
                                  |(last updated: #{region['timestamp']})


                      else
                        li.yellow
                             div(style="height:0px",title='Sanity Check in progress') #{region['node']}
                             button.btn(disabled) Refresh
                             button.btn(disabled style="display: none") Subscribe
                             div.timestamp
                                  |(last updated: #{region['timestamp']})

          div.footer
                 ul.unstyled

